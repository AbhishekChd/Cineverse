<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backdrop_blur_end"
    tools:context=".activities.DetailActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activities.DetailActivity">

        <View
            android:id="@+id/vertical_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/horizontal_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45" />

        <ImageView
            android:id="@+id/iv_backdrop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/backdrop_image_desc"
            android:foreground="@drawable/backdrop_gradient"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/horizontal_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4"
            app:srcCompat="@drawable/backdrop_w600_thor" />

        <ImageView
            android:id="@+id/iv_movie_poster"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/poster_height"
            android:layout_marginStart="@dimen/horizontal_separation_margin"
            android:contentDescription="@string/poster_image_desc"
            android:scaleType="centerCrop"
            android:src="@drawable/poster_w185_thor"
            android:transitionName="@string/poster_image_transition"
            app:layout_constraintBottom_toBottomOf="@id/horizontal_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/horizontal_divider"
            app:layout_constraintVertical_bias="0.2" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/details_view_margin"
            android:layout_marginStart="@dimen/details_view_margin"
            android:layout_marginTop="@dimen/horizontal_separation_margin"
            android:ellipsize="marquee"
            android:singleLine="true"

            android:text="@string/sample_movie_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintBottom_toBottomOf="@id/horizontal_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_movie_poster"
            app:layout_constraintTop_toTopOf="@id/horizontal_divider" />

        <TextView
            android:id="@+id/release_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/release_date_label"
            app:layout_constraintBottom_toBottomOf="@id/rating_label"
            app:layout_constraintEnd_toEndOf="@id/tv_release_date"
            app:layout_constraintStart_toStartOf="@id/tv_release_date"
            app:layout_constraintTop_toTopOf="@id/rating_label" />

        <TextView
            android:id="@+id/tv_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_separation_margin"
            android:textColor="@android:color/black"
            android:textSize="@dimen/movie_card_title"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/pb_rating"
            app:layout_constraintStart_toEndOf="@id/pb_rating"
            app:layout_constraintTop_toTopOf="@id/pb_rating"
            tools:text="@string/sample_release_date" />

        <TextView
            android:id="@+id/rating_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/details_view_margin"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/rating_label"
            app:layout_constraintEnd_toEndOf="@id/pb_rating"
            app:layout_constraintStart_toStartOf="@id/pb_rating"
            app:layout_constraintTop_toBottomOf="@id/pb_rating" />

        <ProgressBar
            android:id="@+id/pb_rating"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginTop="@dimen/details_view_margin"
            android:indeterminate="false"
            android:max="100"
            android:progressDrawable="@drawable/rating_circle"
            android:rotation="270"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:progress="86" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="5.6"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/pb_rating"
            app:layout_constraintEnd_toEndOf="@+id/pb_rating"
            app:layout_constraintStart_toStartOf="@+id/pb_rating"
            app:layout_constraintTop_toTopOf="@+id/pb_rating" />

        <!--TODO: Add Genre-->
        <!--<TextView-->
            <!--android:id="@+id/tv_movie_genre"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_marginEnd="@dimen/details_view_margin"-->
            <!--android:layout_marginTop="@dimen/details_view_margin"-->
            <!--app:layout_constraintBottom_toBottomOf="@id/iv_movie_poster"-->
            <!--app:layout_constraintEnd_toEndOf="parent"-->
            <!--style="@style/TextAppearance.AppCompat.Button"-->
            <!--app:layout_constraintStart_toStartOf="@id/rating_label"-->
            <!--app:layout_constraintTop_toBottomOf="@id/rating_label"-->
            <!--tools:text="TextView" />-->

        <TextView
            android:id="@+id/overview_label"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/details_view_margin"
            android:layout_marginStart="@dimen/details_view_margin"
            android:layout_marginTop="@dimen/horizontal_separation_margin"
            android:text="@string/overview_label"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_movie_poster" />

        <View
            android:id="@+id/overview_divider"
            android:layout_width="0dp"
            android:layout_height="0.6dp"
            android:layout_marginTop="@dimen/details_view_margin"
            android:background="#cccccc"
            app:layout_constraintEnd_toEndOf="@id/overview_label"
            app:layout_constraintStart_toStartOf="@id/overview_label"
            app:layout_constraintTop_toBottomOf="@id/overview_label" />

        <TextView
            android:id="@+id/tv_overview"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/details_view_margin"
            android:textAlignment="gravity"
            app:layout_constraintEnd_toEndOf="@id/overview_label"
            app:layout_constraintStart_toStartOf="@id/overview_label"
            app:layout_constraintTop_toBottomOf="@id/overview_divider"
            tools:text="TextView" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</ScrollView>